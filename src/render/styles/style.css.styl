light-green = #6BC09C
dark-green = #269364
light-orange = #FFCE8E

body
	margin: 0
	padding: 0
	color: white
	background-color: light-green
	font-family: arial

a, #tag_list li a
	color: #036139
	text-decoration: none

a:visited
	color: inherit

nav
	padding: 10px
	background-color: dark-green

nav h1
	margin: 0
	padding: 5px
	display: inline
	color: white

#nav_links
	padding: 0
	display: inline
	list-style-type: none

#nav_links li
	margin: 5px
	display: inline-block
	font-weight: bold
	color: white
	
#nav_links .active 
	color: light-green

#navlinks .inactive
	color: white

#container
	margin: auto auto
	padding: 5px
	width: 920px

#container h2
	margin: 5px

#posts
	padding: 0
	list-style-type: none
	border-bottom: solid 1px gray

#posts:nth-child(even)
	background-color: dark-green

.post
	margin: 0
	padding: 0 5px 0 5px

.post h2, .post h4
	display: inline

.post p
	margin: 5px
	padding: 0 10px 0 10px
	font-size: 18px
	font-weight: bold

.post a
	padding-left: 5px
	font-size: 14px
	color: light-orange

h3
	margin: 0
	padding: 0

#tag_list
	margin: 0
	padding: 0
	width: 100%
	display: inline-block
	list-style-type: none

#tag_list li
	display: inline-block
	margin: 5px

#back_button
	margin-top: 10px
	padding: 5px
	display: block
	width: 50px;
	text-align: center
	font-size: 18px
	font-weight: bold
	color: white
	background-color: dark-green
	border-radius: 5px;
